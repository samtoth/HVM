{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/examples/numbers-test",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'hvm'",
      "cargo": {
        "args": [
          "build",
          "--bin=hvm",
          "--package=hvm"
        ],
        "filter": {
          "name": "hvm",
          "kind": "bin"
        }
      },
      "args": ["i"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'hvm'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=hvm",
          "--package=hvm"
        ],
        "filter": {
          "name": "hvm",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}